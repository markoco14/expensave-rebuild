<view id="form-fields" xmlns="https://hyperview.org/hyperview" style="form-column">
    {% if saved == True %}
        <behavior trigger="load" action="dispatch-event" event-name="top-up-updated" />
        <behavior trigger="load" action="reload" href="/hv/top-up/{{ top_up.top_up_id }}"/>
    {% endif %}
    <view>
        <text style="text-dark text-large">Start amount</text>
        <text-field 
            style="text-field text-end"
            name="start_amount"
            value="{{ top_up.start_amount }}"
            >
            Amount available: {{ top_up.start_amount }}
        </text-field>
    </view>
    <view>
        <text style="text-dark text-large">Remaining amount</text>
        <text-field 
            style="text-field text-end"
            name="end_amount"
            value="{{ top_up.end_amount if top_up.end_amount else 0 }}"
            >
            Amount spent: {{ top_up.end_amount if top_up.end_amount else 0 }}
        </text-field>
    </view>
</view>