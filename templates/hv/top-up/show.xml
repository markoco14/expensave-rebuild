{% extends "hv/layout.xml" %}

{% block header %}
<header style="header flex-header">
    <view style="header-back-btn" action="back"><text style="text-dark text-large">B</text></view>
    <text style="heading text-dark text-center">Top Up</text>
    <view style="header-placeholder"><text style="text-dark text-large" action="reload" href="/hv/top-up/{{ top_up.top_up_id }}/edit">Edit</text></view>
</header>
{% endblock header %}

{% block content %}
<view style="container">
    <view style="card">
        <text style="text-dark text-large">Bucket: {{ top_up.bucket_name }}</text>
        <text style="text-dark text-large">Month: {{ top_up.month_start }}</text>
        <text style="text-dark text-large">Amount available: {{ top_up.start_amount }}</text>
        <text style="text-dark text-large">Amount spent: {{ top_up.end_amount if top_up.end_amount else 0 }}</text>
    </view>
    {# <text style="text-dark text-large" action="reload" href="/hv/top-up/{{ top_up.top_up_id }}/edit">Edit</text> #}
</view>
{% endblock content%}