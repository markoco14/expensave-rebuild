{% extends "hv/layout.xml" %}

{% block header %}
<header style="header flex-header">
    <view style="header-placeholder" action="back">
        {% include "hv/svg/back.xml" %}
    </view>
    <text style="heading text-dark text-center">Edit Top Up</text>
    <view style="header-placeholder" action="reload" href="/hv/top-up/{{ top_up.top_up_id }}/edit">
        {% include "hv/svg/edit.xml" %}
    </view>
</header>
{% endblock header %}

{% block content %}
<view style="container" id="top-up-form">
    <form style="card form-column">
    
        {% include "hv/top-up/_form_fields.xml" %}

        <view
            verb="post"
            href="/hv/top-up/{{ top_up.top_up_id }}"
            target="form-fields"
            action="replace" 
            style="btn btn-primary"
            >
            <text style="text-center text-light text-large">Save</text>
        </view>

        <view 
            action="reload"
            href="/hv/top-up/{{ top_up.top_up_id }}"
            style="btn btn-secondary"
            >
            <text style="text-dark text-large text-center">Cancel</text>
        </view>
        
    </form>
    
</view>
{% endblock content%}