{% extends "hv/layout.xml" %}

{% block header %}
<header style="header">
    <text style="heading text-dark text-center">{{ today_date.strftime("%B %d, %Y") }}</text>
</header>
{% endblock header%}

{% block content %}
<view style="container">
    <behavior trigger="on-event" event-name="purchase-added" action="reload" href="/hv/today"/>
    <behavior trigger="on-event" event-name="purchase-deleted" action="reload" href="/hv/today"/>
    {% if not daily_spending_bucket %}
        <text>You haven't set up your daily budget for this month.</text>
        <text>Click here to set your budget</text>
    {% else %}
        <list 
            id="purchase-list" 
            trigger="refresh" 
            action="replace-inner" 
            target="purchase-list" 
            href="/hv/today?rows_only=true"
            >
            {% include "hv/_rows.xml"%}
        </list>
    {% endif %}
</view>
{% endblock content%}
