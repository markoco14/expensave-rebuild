<style id="body"
    minHeight="100%"
    />

<style id="container"
    minHeight="100%"
    paddingLeft="8"
    paddingRight="8"
    paddingTop="8"
    backgroundColor="#f0f0f0"
    marginBottom="128"
    />

<style id="header"
    marginTop="12"
    marginBottom="24"
    paddingLeft="8"
    paddingRight="8"
    />

<style id="flex-header" 
    display="flex"
    flexDirection="row"
    justifyContent="space-between"
    alignItems="center"
    />

<style id="heading"
    fontSize="32"
    color="#111827"
    />

<style id="header-back-btn" 
    width="40"
    height="40"
    display="flex"
    justifyContent="center"
    alignItems="center"
    borderRadius="100%"
    />

<style id="header-placeholder"
    width="40"
    />

<style id="column"
    display="flex"
    flexDirection="column"
    gap="16"
    />

<style id="card"
    backgroundColor="white"
    padding="16"
    borderRadius="8"
    />

<style id="btn-primary"
    backgroundColor="rgb(175, 242, 200)"
    elevation="2"
    borderRadius="4"
    padding="16"
    marginBottom="8"
    display="flex"
    flexDirection="row"
    justifyContent="center"
    >
    <modifier pressed="true">
        <style backgroundColor="rgb(118, 236, 163)" elevation="0"/>
    </modifier>    
</style>

<style id="btn-primary-text"
    color="rgb(45, 74, 56)"
    fontSize="18"
    />

<style id="btn-delete" 
    backgroundColor="red"
    padding="8"
    borderRadius="4"
    />

<style id="btn-text" 
    textAlign="center"
    />

<style id="text-light" 
    color="#ffffff"
    />

<style id="text-dark"
    color="#111827"
    />

<style id="text-large"
    fontSize="18"
    />

<style id="input-group" 
    marginBottom="8"
    />

<style id="label"
    marginBottom="4"
    />

<style id="total" 
    display="flex"
    flexDirection="row"
    justifyContent="space-between"
    color="#111827" 
    backgroundColor="rgb(255, 255, 255)"
    elevation="2"
    borderRadius="4"
    padding="16"
    marginBottom="8"
    />

<style id="total-text" 
    textAlign="right" 
    />

<style id="bucket-link" 
    display="flex"
    flexDirection="column"
    backgroundColor="#111827"
    />


