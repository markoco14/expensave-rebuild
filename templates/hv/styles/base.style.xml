<style id="body"
    minHeight="100%"
    />

<style id="container"
    minHeight="100%"
    paddingLeft="8"
    paddingRight="8"
    paddingTop="8"
    backgroundColor="{{ gray_50 }}"
    marginBottom="128"
    />

<style id="header"
    marginTop="12"
    marginBottom="24"
    paddingHorizontal="8"
    />

<style id="flex-header" 
    display="flex"
    flexDirection="row"
    justifyContent="space-between"
    alignItems="center"
    />

<style id="heading"
    fontSize="32"
    />

<style id="header-back-btn" 
    width="40"
    height="40"
    display="flex"
    justifyContent="center"
    alignItems="center"
    borderRadius="100%"
    />

<style id="header-placeholder"
    width="40"
    />

<style id="column"
    display="flex"
    flexDirection="column"
    gap="16"
    />

<style id="card"
    backgroundColor="{{ white }}"
    padding="16"
    borderRadius="8"
    />

<style id="btn" 
    padding="8"
    borderRadius="4"
    />

<style id="btn-primary" 
    backgroundColor="{{ gray_600 }}"
    />

<style id="btn-secondary" 
    borderWidth="1"
    borderColor="{{ gray_600 }}"
    />

<style id="btn-tab" 
    borderWidth="1"
    borderColor="{{ gray_600 }}"
    {# width="25%" #}
/>

<style id="btn-delete" 
    backgroundColor="{{ red_500 }}"
    />

<style id="btn-gap"
    marginBottom="12"
    />

<style id="bottom-btn-bar"
    display="flex"
    flexDirection="row"
    gap="8"
    marginTop="32"
    />

<style id="text-center" 
    textAlign="center"
    />

<style id="text-light" 
    color="{{ white }}"
    />

<style id="text-dark"
    color="{{ gray_900 }}"
    />

<style id="text-large"
    fontSize="18"
    />

    <style id="text-medium" fontSize="16" />

<style id="input-group" 
    marginBottom="8"
    />

<style id="label"
    marginBottom="4"
    />

<style id="total" 
    display="flex"
    flexDirection="row"
    justifyContent="space-between"
    borderBottomWidth="1"
    borderColor="gray"
    marginBottom="8"
    paddingHorizontal="8"
    />

<style id="total-text" 
    textAlign="right" 
    />

<style id="bucket-link" 
    display="flex"
    flexDirection="column"
    backgroundColor="{{ gray_900 }}"
    />
