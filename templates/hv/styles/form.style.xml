{% set green_dark = "#2ee246" %}

<style id="input-group"
    marginBottom="16"
    />

<style id="text-field"
    color="#111827"
    backgroundColor="white"
    padding="4"
    borderWidth="1"
    borderColor="#111827"
    borderRadius="4"
    />

<style id="input"
    backgroundColor="white"
    padding="4"
    borderWidth="1"
    borderColor="#111827"
    borderRadius="4"
    />

<style id="error"
    color="red"
    />

<style id="select-single" 
    display="flex"
    flexDirection="row"
    gap="8"
    />

<style id="option"
    borderWidth="1"
    borderColor="black"
    padding="4"
    paddingLeft="8"
    paddingRight="8"
    borderRadius="4"
    >
    <modifier selected="true">
        <style backgroundColor="{{ green_dark }}" />
    </modifier>    
</style>

<style id="submit-button" 
    backgroundColor="{{ green_dark }}"
    padding="8"
    display="flex"
    flexDirection="row"
    justifyContent="center"
    width="100%"
    />