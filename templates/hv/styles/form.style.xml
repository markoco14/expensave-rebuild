<style id="form-column"
    display="flex"
    flexDirection="column"
    gap="16"
    />

<style id="input-group"
    marginBottom="16"
    />

<style id="text-field"
    color="{{ gray_900 }}"
    backgroundColor="{{ white }}"
    padding="4"
    borderWidth="1"
    borderColor="{{ gray_900 }}"
    borderRadius="4"
    />

<style id="text-end" textAlign="right"/>

<style id="input"
    backgroundColor="{{ white }}"
    padding="4"
    borderWidth="1"
    borderColor="{{ gray_900 }}"
    borderRadius="4"
    />

<style id="error"
    color="red"
    />

<style id="select-single" 
    display="flex"
    flexDirection="row"
    gap="8"
    />

<style id="option"
    borderWidth="1"
    borderColor="{{ gray_900 }}"
    paddingVertical="6"
    paddingHorizontal="12"
    borderRadius="4"
    >
    <modifier selected="true">
        <style borderColor="{{ green_500 }}" backgroundColor="{{ green_100 }}" />
    </modifier>    
</style>

<style id="submit-button" 
    color="{{ white }}"
    backgroundColor="{{ gray_600 }}"
    padding="8"
    display="flex"
    flexDirection="row"
    justifyContent="center"
    width="100%"
    />