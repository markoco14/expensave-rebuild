<style 
    id="progress-track"
    backgroundColor="{{ red_500 }}"
    width="100%"
    height="32"
    borderRadius="4"
    display="flex"
    flexDirection="row"
    alignItems="center"
    marginBottom="24"
    />
    
<style 
    id="progress-bar"
    backgroundColor="{{ green_500 }}"
    height="100%"
    borderTopLeftRadius="4"
    borderBottomLeftRadius="4"
    width="{{ percent_remaining }}%"
    display="flex"
    flexDirection="row"
    justifyContent="flex-end"
    alignItems="center"
    paddingRight="4"
    marginRight="4"
    />

<style 
    id="remainder" 
    color="{{ gray_900 }}"
    marginBottom="16" 
    fontSize="18"
    />

<style id="bucket-bar"
    display="flex"
    flexDirection="row"
    gap="4"
    overflow="scroll"
    marginBottom="32"
    />

<style id="bucket-bar-item"
    backgroundColor="{{ green_100 }}"
    padding="2"
    paddingLeft="8"
    paddingRight="8"
    borderRadius="8"
    />

<style
    id="list-item"
    display="flex"
    flexDirection="row"
    justifyContent="space-between"
    color="{{ gray_900 }}" 
    backgroundColor="{{ white }}"
    elevation="2"
    borderRadius="4"
    padding="16"
    marginBottom="8"
    />

<style 
    id="list-item-text"
    color="{{ gray_900 }}"
    fontSize="16"
    />