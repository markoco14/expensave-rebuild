{% extends "hv/layout.xml" %}

{% block header %}<text style="heading">Buckets</text>{% endblock header %}

{% block content %}
<view style="container">
	{% for top_up in top_ups %}
	<view style="bucket">
		<text style="text-dark text-large">{{ top_up.bucket_name }}</text>
		<text style="text-dark text-large">{{ top_up.month_start }}</text>
		<text style="text-dark text-large">{{ top_up.start_amount }}</text>
		<text style="text-dark text-large">{{ top_up.end_amount if top_up.end_amount else 'No end amount recorded' }}</text>
	</view>
	{% endfor %}
	<view>
		<behavior trigger="press" action="reload" href="/hv/today" />
		<text style="text-dark text-large">Today</text>
	</view>
</view>

{% endblock content %}
