{% extends "hv/layout.xml" %}

{% block header %}
<header style="header flex-header">
	<text style="heading">Buckets</text>
</header>
{% endblock header %}

{% block content %}
<view style="container column">
	<behavior trigger="on-event" event-name="top-up-updated" action="reload" href="/hv/buckets"/>
	{% for top_up in top_ups %}
	<view style="card">
		<view style="card-header">
		<text style="text-dark text-large">{{ top_up.bucket_name }}</text>
		<text style="text-dark text-large">
			<behavior action="push" href="/hv/top-up/{{ top_up.top_up_id }}"/>
			Details</text>
		</view>
		<text style="text-dark text-large">{{ top_up.month_start }}</text>
		<text style="text-dark text-large">{{ top_up.end_amount if top_up.end_amount else 0 }} / {{ top_up.start_amount }}</text>
	</view>
	{% endfor %}
	<view>
		<behavior trigger="press" action="reload" href="/hv/today" />
		<text style="text-dark text-large">Today</text>
	</view>
</view>

{% endblock content %}
