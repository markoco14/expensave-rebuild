{% extends "hv/layout.xml" %}

{% block header %}
<header style="header flex-header">
    <view style="header-placeholder" action="back">
        <svg width="24" height="24" viewBox="0 0 1024 1024" fill="#000000" class="icon"  version="1.1" xmlns="http://www.w3.org/2000/svg">
            <path 
                d="M669.6 849.6c8.8 8 22.4 7.2 30.4-1.6s7.2-22.4-1.6-30.4l-309.6-280c-8-7.2-8-17.6 0-24.8l309.6-270.4c8.8-8 9.6-21.6 2.4-30.4-8-8.8-21.6-9.6-30.4-2.4L360.8 480.8c-27.2 24-28 64-0.8 88.8l309.6 280z" 
                fill="currentColor"
                stroke="currentColor" 
                stroke-width="50"
                stroke-linecap="round"
                stroke-linejoin="round"/>
        </svg>
    </view>
    <text style="heading text-dark text-center">Purchase</text>
    <view style="header-placeholder" action="reload" href="/hv/purchases/{{ purchase.purchase_id }}/edit">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path 
                d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z" 
                stroke="#000000" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round"/>
            <path 
                d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13" 
                stroke="#000000" 
                stroke-width="2" 
                stroke-linecap="round" 
                stroke-linejoin="round"/>
        </svg>
    </view>
</header>{% endblock header%}

{% block content %}
<view style="container">
    {# for development #}
    <behavior trigger="refresh" action="reload"/>
    <view style="card">
        {% if not purchase %}
        <text>No purchase found</text>
        {% else %}
        <view style="input-group">
            <text style="label text-large text-dark">Amount</text>
            <text style="text-large text-dark">${{ purchase.amount }} {{ purchase.currency }}</text>
        </view>
        <view style="input-group">
            <text style="label text-large text-dark">Time</text>
            <text style="text-large text-dark">{{ purchase.purchased_at.strftime("%B %d at %H:%M:%S") }} ({{ purchase.timezone }})</text>
        </view>
        <view style="input-group">
            <text style="label text-large text-dark">Bucket</text>
            <text style="text-large text-dark">{{ purchase.bucket_name }}</text>
        </view>
        {% endif %}
    </view>
</view>
{% endblock content %}
